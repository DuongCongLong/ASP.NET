        </section>


        <!-- =============== SECTION REQUEST .//END =============== -->
        <!-- =============== SECTION ITEMS =============== -->    
        <section class="padding-bottom-sm">

            <header class="section-heading heading-line">
                <h4 class="title-section text-uppercase">Sản phẩm đề xuất</h4>
            </header>

            <div class="row row-sm">
                @foreach (var product in Model.ListProduct.Where(n => n.TypeId == 2).Take(6))
                {
                    <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                        <div class="card card-sm card-product-grid">
                            <a href="@Url.Action("ProductDetail", "Product", new { id = product.Id })" class="img-wrap">
                                <img src="~/Content/images/product/@product.Avatar" alt="@product.Name">
                            </a>
                            <figcaption class="info-wrap">
                                <a href="@Url.Action("ProductDetail", "Product", new { id = product.Id })" class="title">@product.Name</a>
                                <div class="price mt-1">
                                    @((product.Price ?? 0).ToString("N0")) VNĐ
                                </div> <!-- price-wrap.// -->
                            </figcaption>
                        </div>
                    </div> <!-- col.// -->
                }
