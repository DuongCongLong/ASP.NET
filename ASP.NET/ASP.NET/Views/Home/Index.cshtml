                            @foreach (var product in Model.ListProduct.Where(n => n.BrandId == 2))
                            {
                                <li class="col-6 col-lg-3 col-md-4">
                                    <a href="@Url.Action("ProductDetail", "Product",new {Id=product.Id})" class="item">
                                        <div class="card-body">
                                            <h6 class="title">Công nghệ tiên tiến với bộ sưu tập xu hướng  </h6>
                                            <img class="img-sm float-right" src="~/Content/images/product/@product.Avatar">
                                            <p class="text-muted"><i class="fa fa-map-marker-alt"></i> @product.Name</p>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card.// -->
        </section>
        <!-- =============== SECTION 2 END =============== -->
        <!-- =============== SECTION REQUEST =============== -->

