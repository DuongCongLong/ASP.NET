@model ASP.NET.Models.HomeModel
<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Website title - bootstrap html template</title>
</head>
<body>
    <div class="container">
        <!-- ========================= SECTION MAIN  =========================-->
        <section class="section-main padding-y">
            <main class="card">
                <div class="card-body">

                    <div class="row">
                        <aside class="col-lg col-md-3 flex-lg-grow-0">
                            <h6>Danh mục</h6>
                            <nav class="nav-home-aside">
                                <ul class="menu-category">
                                    @foreach (var category in Model.ListCategory)
                                    {
                                        <li>
                                            @Html.ActionLink(category.Name, "ProductCategory", "Category", new { @Id = category.Id }, null)
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </aside> <!-- col.// -->
                        <div class="col-md-9 col-xl-7 col-lg-7">

                            <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                            <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                    <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                    <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                                </ol>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="~/Content/images/banners/slider.jpg" alt="First slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/Content/images/banners/slider1.jpg" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/Content/images/banners/slider3.jpg" alt="Third slide">
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                        </div> <!-- col.// -->
                        <div class="col-md d-none d-lg-block flex-grow-1">
                            <aside class="special-home-right">
                                <h6 class="bg-blue text-center text-white mb-0 p-2">Danh mục phổ biến</h6>
                                @foreach (var category in Model.ListCategory.Where(n => n.ShowOnHomePage == true).Take(3))
                                {
                                    <div class="card-banner border-bottom">
                                        <div class="py-3" style="width:80%">
                                            <h6 class="card-title">@category.Name</h6>
                                            <a href="@Url.Action("ProductDetail", "Product",new {Id=category.Id})" class="btn btn-secondary btn-sm"> Mua ngay </a>
                                        </div>
                                        <img src="~/Content/images/category/@category.Avatar" height="80" class="img-bg">
                                    </div>
                                }
                            </aside>
                        </div> <!-- col.// -->
                    </div> <!-- row.// -->

                </div> <!-- card-body.// -->
            </main> <!-- card.// -->

        </section>
        <!-- ========================= SECTION MAIN END// ========================= -->
        <!-- =============== SECTION DEAL =============== -->
        <section class="padding-bottom">
            <div class="card card-deal">
                <div class="col-heading content-body">
                    <header class="section-heading">
                        <h3 class="section-title">Giảm giá sốc</h3>
                        <p>Hệ sinh thái của nhà táo</p>
                    </header><!-- sect-heading -->
                    <div class="timer">
                        <div><span class="num" id="days">00</span> <small>Ngày</small></div>
                        <div><span class="num" id="hours">00</span> <small>Giờ</small></div>
                        <div><span class="num" id="minutes">00</span> <small>Phút</small></div>
                        <div><span class="num" id="seconds">00</span> <small>Giây</small></div>
                    </div>
                </div> <!-- col.// -->
                <div class="row no-gutters items-wrap">
                    @foreach (var product in Model.ListProduct.Where(n => n.TypeId == 1).Take(4))
                    {
                        <div class="col-md col-6">
                            <figure class="card-product-grid card-sm">
                                <a href="@Url.Action("ProductDetail", "Product",new {Id=product.Id})" class="img-wrap">
                                    <img src="~/Content/images/product/@product.Avatar">
                                </a>
                                <div class="text-wrap p-3">
                                    <a href="@Url.Action("ProductDetail", "Product",new {Id=product.Id})" class="title">@product.Name</a>
                                    <span class="badge badge-danger"> -20% </span>
                                </div>
                            </figure>
                        </div> <!-- col.// -->
                    }
                </div>
            </div>

        </section>
        <!-- =============== SECTION DEAL // END =============== -->
        <!-- =============== SECTION 1 =============== -->
        <section class="padding-bottom">
            <header class="section-heading heading-line">
                <h4 class="title-section text-uppercase">Apple</h4>
            </header>

            <div class="card card-home-category">
                <div class="row no-gutters">
                    <div class="col-md-3">

                        <div class="home-category-banner bg-light-orange">
                            <h5 class="title">Những công nghệ xu hướng chỉ dành cho mùa hè</h5>
                            <p>Các công nghệ mới nhất và sáng tạo nhất đang được ứng dụng trong mùa hè này.</p>
                            <a href="#" class="btn btn-outline-primary rounded-pill">Mua ngay</a>
                            <img src="~/Content/images/items/airpod1.jpg" class="img-bg">
                        </div>

                    </div> <!-- col.// -->
                    <div class="col-md-9">
                        <ul class="row no-gutters bordered-cols">
                            @foreach (var product in Model.ListProduct.Where(n => n.BrandId == 1))
                            {
                                <li class="col-6 col-lg-3 col-md-4">
                                    <a href="@Url.Action("ProductDetail", "Product",new {Id=product.Id})" class="item">
                                        <div class="card-body">
                                            <h6 class="title">Công nghệ tiên tiến với bộ sưu tập xu hướng</h6>
                                            <img class="img-sm float-right" src="~/Content/images/product/@product.Avatar">
                                            <p class="text-muted"><i class="fa fa-map-marker-alt"></i> @product.Name</p>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card.// -->
        </section>
        <!-- =============== SECTION 1 END =============== -->
        <!-- =============== SECTION 2 =============== -->
        <section class="padding-bottom">
            <header class="section-heading heading-line">
                <h4 class="title-section text-uppercase">Samsung</h4>
            </header>

            <div class="card card-home-category">
